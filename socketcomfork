#include<stdio.h>
#include<stdlib.h>
#include<sys/types.h>
#include<unistd.h>
 
int main(void){
    int i;
    pid_t pid;
    
if((pid = fork()) < 0){
    perror("fork failed");
    exit(EXIT_FAILURE);
}
if(pid = 0){
    printf("pid do filho: %d\n", getpid());
}
else{
    printf("pid do Pai: %d\n", getpid());
}
printf("este primt serÃ¡ executado por ambos processos\n\n");
exit(0);
}
